{
    "name": "pm2-vscode-extension",
    "displayName": "Pm2 VSCode extension",
    "description": "Manage PM2 within VSCode",
    "icon": "resources/logo.png",
    "license": "MIT",
    "keywords": [
        "pm2",
        "process manager",
        "vscode",
        "extension"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/fashioncloud/pm2-vscode-extension.git"
    },
    "version": "1.0.28",
    "publisher": "betomoretti",
    "engines": {
        "vscode": "^1.93.1"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "pm2-container",
                    "title": "PM2 Explorer",
                    "icon": "resources/container-icon.svg"
                }
            ]
        },
        "views": {
            "pm2-container": [
                {
                    "id": "pm2-processes",
                    "name": "Running Processes"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "when": "viewItem == pm2-process",
                    "command": "pm2.reload",
                    "group": "pm2"
                },
                {
                    "when": "viewItem == pm2-process",
                    "command": "pm2.logsOnTerminal",
                    "group": "pm2"
                },
                {
                    "when": "viewItem == pm2-process",
                    "command": "pm2.logsOnChannel",
                    "group": "pm2"
                },
                {
                    "when": "viewItem == pm2-process",
                    "command": "pm2.flushLogs",
                    "group": "pm2"
                },
                {
                    "when": "viewItem == pm2-process",
                    "command": "pm2.start",
                    "group": "pm2"
                },
                {
                    "when": "viewItem == pm2-process",
                    "command": "pm2.stop",
                    "group": "pm2"
                }
            ],
            "view/title": [
                {
                    "when": "view == pm2-processes",
                    "command": "pm2.reloadAll",
                    "group": "pm2"
                },
                {
                    "when": "view == pm2-processes",
                    "command": "pm2.logsAll",
                    "group": "pm2"
                },
                {
                    "when": "view == pm2-processes",
                    "command": "pm2.flushAll",
                    "group": "pm2"
                },
                {
                    "when": "view == pm2-processes",
                    "command": "pm2.refresh",
                    "group": "pm2"
                },
                {
                    "when": "view == pm2-processes",
                    "command": "pm2.startAll",
                    "group": "pm2"
                },
                {
                    "when": "view == pm2-processes",
                    "command": "pm2.stopAll",
                    "group": "pm2"
                }
            ]
        },
        "commands": [
            {
                "command": "pm2.start",
                "title": "Process: Start",
                "category": "pm2"
            },
            {
                "command": "pm2.stop",
                "title": "Process: Stop",
                "category": "pm2"
            },
            {
                "command": "pm2.reload",
                "title": "Process: Reload",
                "category": "pm2"
            },
            {
                "command": "pm2.logsOnTerminal",
                "title": "Process: View Logs on terminal",
                "category": "pm2"
            },
            {
                "command": "pm2.logsOnChannel",
                "title": "Process: View Logs",
                "category": "pm2"
            },
            {
                "command": "pm2.flushLogs",
                "title": "Process: Flush Logs",
                "category": "pm2"
            },
            {
                "command": "pm2.reloadAll",
                "title": "Processes: Reload All",
                "category": "pm2.container"
            },
            {
                "command": "pm2.logsAll",
                "title": "Processes: Logs",
                "category": "pm2.container"
            },
            {
                "command": "pm2.refresh",
                "title": "Refresh List",
                "category": "pm2.container"
            },
            {
                "command": "pm2.startAll",
                "title": "Processes: Start All",
                "category": "pm2.container"
            },
            {
                "command": "pm2.flushAll",
                "title": "Processes: Flush all logs",
                "category": "pm2.container"
            },
            {
                "command": "pm2.stopAll",
                "title": "Processes: Stop All",
                "category": "pm2.container"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "PM2 Explorer configuration",
            "properties": {
                "pm2Explorer.refreshIntervalMs": {
                    "type": "number",
                    "default": 1000,
                    "description": "Interval in milliseconds at which process list will be updated."
                }
            }
        }
    },
    "scripts": {
        "test": "vscode-test",
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'"
    },
    "devDependencies": {
        "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
        "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
        "@types/mocha": "^10.0.8",
        "@types/node": "^18.19.50",
        "@types/vscode": "^1.93.0",
        "@typescript-eslint/eslint-plugin": "^8.6.0",
        "@typescript-eslint/parser": "^8.6.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.1.0",
        "esbuild": "^0.24.0",
        "eslint": "^9.11.0",
        "tslint": "^6.1.3",
        "typescript": "^5.6.2"
    },
    "dependencies": {
        "pm2": "^5.4.2"
    }
}
